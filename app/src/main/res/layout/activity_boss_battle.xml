<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="I_choose_gachamon.BossBattle">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/boss_battle_map_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absolutex="10dp"
        tools:layout_editor_absolutey="64dp">


        <Button
            android:id="@+id/Back_To_Menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="326dp"
            android:background="@android:color/transparent"
            android:text="@string/Back_To_Menu"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

    </RelativeLayout>
    <TextView
        android:id="@+id/boss_battle_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boss_battle"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103" />

    <ImageButton
        android:id="@+id/boss_level_1_imageButton"
        android:layout_width="138dp"
        android:layout_height="130dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boss_battle_textView"
        app:layout_constraintVertical_bias="0.123"
        app:srcCompat="@drawable/boss_level_1_button" />

    <ImageButton
        android:id="@+id/boss_level_2_imageButton"
        android:layout_width="144dp"
        android:layout_height="156dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boss_level_1_imageButton"
        app:layout_constraintVertical_bias="0.813"
        app:srcCompat="@drawable/boss_level_2_button" />

    <ImageButton
        android:id="@+id/boss_level_3_imageButton"
        android:layout_width="153dp"
        android:layout_height="156dp"
        android:layout_marginTop="248dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.811"
        app:layout_constraintStart_toEndOf="@+id/boss_level_2_imageButton"
        app:layout_constraintTop_toBottomOf="@+id/boss_level_1_imageButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/boss_level_3_button" />
</androidx.constraintlayout.widget.ConstraintLayout>