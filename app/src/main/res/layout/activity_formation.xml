<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="I_choose_gachamon.Formation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/formation_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absolutex="10dp"
        tools:layout_editor_absolutey="64dp">


        <Button
            android:id="@+id/Back_To_Menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="318dp"
            android:background="@android:color/transparent"
            android:text="@string/Back_To_Menu"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/formation_screen_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/formation"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <ImageButton
        android:id="@+id/formation_edit_Button"
        android:layout_width="121dp"
        android:layout_height="117dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/formation_screen_TextView"
        app:layout_constraintVertical_bias="0.942"
        app:srcCompat="@drawable/formation_edit_button" />

    <ImageButton
        android:id="@+id/formation_save_Button"
        android:layout_width="121dp"
        android:layout_height="117dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.895"
        app:layout_constraintStart_toEndOf="@+id/formation_edit_Button"
        app:layout_constraintTop_toBottomOf="@+id/formation_screen_TextView"
        app:layout_constraintVertical_bias="0.942"
        app:srcCompat="@drawable/accept_button" />

</androidx.constraintlayout.widget.ConstraintLayout>