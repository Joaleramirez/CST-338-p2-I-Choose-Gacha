<?xml version="1.0" encoding="utf-8"?>
  <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="I_choose_gachamon.Summoning">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/summoning_background"
      tools:layout_editor_absolutex="10dp"
      tools:layout_editor_absolutey="64dp"
      >


    <Button
        android:id="@+id/Back_To_Menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="318dp"
        android:background="@android:color/transparent"
        android:text="@string/Back_To_Menu"
        android:textColor="#000000"
        android:textSize="34sp" />

  </RelativeLayout>

  <TextView
      android:id="@+id/summoning_textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="140dp"
      android:text="@string/Summon"
      android:textColor="#000000"
      android:textSize="34sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
  
  <ImageButton
      android:id="@+id/summon_Unit_Button"
      android:layout_width="196dp"
      android:layout_height="184dp"
      android:layout_marginTop="208dp"
      android:scaleType="centerCrop"
      android:src="@drawable/summoning_button"
      android:background="@android:color/transparent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/summoning_textView"
      app:layout_constraintVertical_bias="0.181" />
</androidx.constraintlayout.widget.ConstraintLayout>